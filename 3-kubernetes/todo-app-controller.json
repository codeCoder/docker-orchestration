{
   "kind":"ReplicationController",
   "apiVersion":"v1",
   "metadata":{
      "name":"todo-app",
      "labels":{
         "name":"todo-app"
      }
   },
   "spec":{
      "replicas":3,
      "selector":{
         "name":"todo-app"
      },
      "template":{
         "metadata":{
            "labels":{
               "name":"todo-app"
            }
         },
         "spec":{
            "containers":[
               {
                  "name":"todo-app",
                  "image":"johscheuer/todo-app:v1",
                  "ports":[
                     {
                        "containerPort":9090,
                        "protocol":"TCP"
                     }
                  ]
               }
            ]
         }
      }
   }
}